    requirejs(['jquery'], function(jQuery){
        jQuery(function(){
            jQuery(document).ready(function(){
                jQuery('#back').click(function(){
                    location.href="<?php echo $this->getUrl('ticket/customer/index');?>"
                });
            });
        });
    });
</script>